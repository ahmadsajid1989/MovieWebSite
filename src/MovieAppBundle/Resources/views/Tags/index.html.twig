{% extends '::adminbase.html.twig' %}

{% block body -%}
<div class="row">
    <div class="col-md-6">
    <h1>Tags list</h1>
        <a href="{{ path('tags_new') }}" class="m-b-lg btn btn-success">
            Create a new entry
        </a>
    <table class="table-bordered table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tags_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tags_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tags_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        </div>
    </div>
    {% endblock %}
