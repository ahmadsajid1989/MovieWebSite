{% extends '::adminbase.html.twig' %}

{% block body -%}
    <div class="row">
        <div class="col-md-8">
            <h1>Tags <a href="{{ path('tags') }}" class="btn btn-primary">
                    Back to the list
                </a></h1>

            <table class="record_properties table table-bordered">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <td>Action</td>
                    <td><a href="{{ path('tags_edit', { 'id': entity.id }) }}" class="btn btn-info">
                            Edit
                        </a></td>
                </tr>
                </tbody>
            </table>

        </div>
    </div>

{{ form(delete_form) }}
{% endblock %}
