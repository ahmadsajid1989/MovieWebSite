{% extends '::base.html.twig' %}

{% block body -%}
    <div class="row admin">
        <div class="col-md-12">
            <h1>Movie list</h1>
            <table class="records_list table table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Release_date</th>
                    <th>Language</th>
                    <th>Descripton</th>
                    <th>Duration</th>
                    <th>Views</th>
                    <th>Created_at</th>
                    <th>Updated_at</th>
                    <th>Award</th>
                    <th>Country</th>
                    <th>Url</th>
                    <th>Image</th>
                    <th>Publisher</th>
                    <th>Producer</th>
                    <th>Director</th>
                    <th>Cast</th>
                    <th>File_format</th>
                    <th>Rating</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('movies_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.name }}</td>
                        <td>{% if entity.releasedate %}{{ entity.releasedate|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ entity.language }}</td>
                        <td>{{ entity.descripton }}</td>
                       {# <td>{{ entity.duration }}</td>#}
                        <td>{{ entity.views }}</td>
                        <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ entity.award }}</td>
                        <td>{{ entity.country }}</td>
                        <td>{{ entity.url }}</td>
                        <td>{{ entity.imageName }}</td>
                        <td>{{ entity.publisher }}</td>
                        <td>{{ entity.producer }}</td>
                        <td>{{ entity.director }}</td>
                        <td>{{ entity.cast }}</td>
                        <td>{{ entity.fileformat }}</td>
                        <td>{{ entity.rating }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('movies_show', { 'id': entity.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('movies_edit', { 'id': entity.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('movies_new') }}">
                        Create a new entry
                    </a>
                </li>
            </ul>
        </div>
    </div>



    {% endblock %}
