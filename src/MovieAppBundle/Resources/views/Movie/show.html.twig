{% extends '::adminbase.html.twig' %}

{% block body -%}
    <div class="row">
        <div class="col-md-12">
            <h1>Movie - {{ entity.name }}  <a href="{{ path('movies') }}" class="btn btn-primary pull-right m-b-lg">
                    Back to the list
                </a></h1>

            <table class="record_properties table table-bordered table-striped tabled-condensed">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Release_date</th>
                    <td>{{ entity.releasedate|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Language</th>
                    <td>{{ entity.language }}</td>
                </tr>
                <tr>
                    <th>Descripton</th>
                    <td>{{ entity.descripton }}</td>
                </tr>
                {# <tr>
                     <th>Duration</th>
                     &#123;&#35;<td>{{ entity.duration }}</td>&#35;&#125;
                 </tr>
                 <tr>#}
                <th>Views</th>
                <td>{{ entity.views }}</td>
                </tr>
                <tr>
                    <th>Created_at</th>
                    <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Updated_at</th>
                    <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Award</th>
                    <td>{{ entity.award }}</td>
                </tr>
                <tr>
                    <th>Country</th>
                    <td>{{ entity.country }}</td>
                </tr>
                <tr>
                    <th>Url</th>
                    <td>{{ entity.url }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ entity.imageName }}</td>
                </tr>
                <tr>
                    <th>Publisher</th>
                    <td>{{ entity.publisher }}</td>
                </tr>
                <tr>
                    <th>Producer</th>
                    <td>{{ entity.producer }}</td>
                </tr>
                <tr>
                    <th>Director</th>
                    <td>{{ entity.director }}</td>
                </tr>
                <tr>
                    <th>Cast</th>
                    <td>{{ entity.cast }}</td>
                </tr>
                <tr>
                    <th>File_format</th>
                    <td>{{ entity.fileformat }}</td>
                </tr>
                <tr>
                    <th>Rating</th>
                    <td>{{ entity.rating }}</td>
                </tr>
                <tr>
                    <td>Action</td>
                    <td>
                        <a href="{{ path('movies_edit', { 'id': entity.id }) }}" class="btn btn-info">
                            Edit
                        </a>
                    </td>
                </tr>
                </tbody>
            </table>


            {{ form(delete_form) }}
        </div>
    </div>

{% endblock %}
