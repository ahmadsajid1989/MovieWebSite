{% extends '::adminbase.html.twig' %}

{% block body -%}
    <div class="row">
        <div class="col-md-8">
            <h1>Category <a href="{{ path('category') }}" class="pull-right btn btn-primary">
                    Back to the list
                </a></h1>

            <table class="record_properties table table-bordered table-striped">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ entity.slug }}</td>
                </tr>
                <tr>
                    <th>Action</th>
                    <td><a href="{{ path('category_edit', { 'id': entity.id }) }}" class="btn btn-info">
                            Edit
                        </a>
                        {{ form(delete_form) }}
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>



{% endblock %}
